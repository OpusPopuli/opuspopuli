  "devDependencies": {
    "@nestjs/common": "^11.1.9",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
