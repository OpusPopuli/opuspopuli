{
  "name": "@qckstrt/relationaldb-provider",
  "version": "0.2.0",
  "description": "Relational database provider (Prisma ORM) for QCKSTRT platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.js",
      "require": "./dist/testing.js"
    }
  },
  "typesVersions": {
    "*": {
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "prebuild": "npx prisma generate",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "pnpm run build",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio"
  },
  "keywords": [
    "qckstrt",
    "relationaldb",
    "postgres",
    "supabase",
    "prisma",
    "provider"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5",
    "@qckstrt/common": "workspace:*"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/testing": "^11.1.9",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
